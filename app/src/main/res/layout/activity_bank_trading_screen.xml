<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/trading_menu"
    android:background="#ffffffb2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_span="3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:src="@mipmap/rock_card"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:focusable="false" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView2"
            android:src="@mipmap/sheep_card"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:focusable="false"
            android:layout_marginLeft="-80dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView3"
            android:src="@mipmap/wheat_card"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:focusable="false"
            android:layout_marginLeft="-80dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView4"
            android:src="@mipmap/brick_card"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:focusable="false"
            android:layout_marginLeft="-80dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView5"
            android:src="@mipmap/lumber_card"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:focusable="false"
            android:layout_marginLeft="-80dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout5">

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:layout_marginLeft="20dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:layout_marginLeft="20dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_marginLeft="20dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner5"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/returnToGame"
        android:id="@+id/leaveBankTradingMenu"
        android:layout_column="2"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/linearLayout3"
        android:layout_toEndOf="@+id/linearLayout3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/makeTrade"
        android:id="@+id/tradeWithBank"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textSize="30dp" />

</RelativeLayout>

