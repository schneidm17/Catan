<?xml version="1.0" encoding="utf-8"?>
<?xml:variable name="cardWidth" select="170dp"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout"
                android:background="#ffa200">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player1_card1"
                    android:src="@mipmap/card_backs"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/player1_card3"
                    android:layout_toStartOf="@+id/player1_card3" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player1_card2"
                    android:src="@mipmap/lumber_card"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/player1_card1"
                    android:layout_toLeftOf="@+id/player1_card3"
                    android:layout_toStartOf="@+id/player1_card3"
                    android:layout_marginLeft="-80dp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player1_card3"
                    android:src="@mipmap/card_backs"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/player1_card2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="-80dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:background="#221bff">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player2_card1"
                    android:src="@mipmap/card_backs"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/player2_card3"
                    android:layout_toStartOf="@+id/player2_card3" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player2_card2"
                    android:src="@mipmap/card_backs"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/player2_card1"
                    android:layout_toLeftOf="@+id/player2_card3"
                    android:layout_toStartOf="@+id/player2_card3"
                    android:layout_marginLeft="-80dp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player2_card3"
                    android:src="@mipmap/card_backs"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_below="@+id/linearLayout"
                    android:layout_toEndOf="@+id/linearLayout2"
                    android:layout_toRightOf="@+id/linearLayout2"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-80dp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 1 will trade: Lumber"
                android:id="@+id/player1_text"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="#ffa200"
                android:singleLine="false"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 2 will not trade"
                android:id="@+id/player2_text"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="#221bff"
                android:singleLine="false"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:text="Accept Trade"
                android:id="@+id/player1_button"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:text="Accept Trade"
                android:id="@+id/player2_button"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout3"
                android:background="#ff1300" >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player3_card1"
                    android:src="@mipmap/card_backs"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/player3_card3"
                    android:layout_toStartOf="@+id/player3_card3" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player3_card2"
                    android:src="@mipmap/rock_card"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/player3_card1"
                    android:layout_toLeftOf="@+id/player3_card3"
                    android:layout_toStartOf="@+id/player3_card3"
                    android:layout_marginLeft="-80dp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/player3_card3"
                    android:src="@mipmap/card_backs"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_below="@+id/linearLayout"
                    android:layout_toEndOf="@+id/linearLayout2"
                    android:layout_toRightOf="@+id/linearLayout2"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-80dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:weightSum="1"
                android:layout_gravity="center_horizontal"
                android:layout_column="1"
                >

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:id="@+id/user_card1"
                    android:src="@mipmap/rock_card"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/user_card2"
                    android:layout_toLeftOf="@+id/user_card4"
                    android:layout_toStartOf="@+id/user_card4"
                    android:contextClickable="true"
                    android:layout_marginLeft="-20dp" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:id="@+id/user_card2"
                    android:src="@mipmap/sheep_card"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/user_card4"
                    android:layout_toStartOf="@+id/user_card4"
                    android:clickable="false"
                    android:contextClickable="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-80dp" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:id="@+id/user_card3"
                    android:src="@mipmap/wheat_card"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/user_card2"
                    android:layout_toLeftOf="@+id/user_card4"
                    android:layout_toStartOf="@+id/user_card4"
                    android:layout_marginLeft="-80dp"
                    android:contextClickable="true" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:id="@+id/user_card4"
                    android:src="@mipmap/brick_card"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/user_card3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="-80dp"
                    android:contextClickable="true" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:id="@+id/user_card5"
                    android:src="@mipmap/lumber_card"
                    android:scaleType="fitXY"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:layout_alignTop="@+id/user_card3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="-80dp"
                    android:contextClickable="true" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 3 will trade: Rock"
                android:id="@+id/player3_text"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="#ff1300"
                android:singleLine="false"
                android:gravity="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="You want to trade:"
                    android:id="@+id/user_tradeText"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_column="1"
                    android:layout_marginLeft="40dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/user_trade_dropdown"
                    android:layout_column="1"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="32dp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:text="Accept Trade"
                android:id="@+id/player3_button"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="You are asking for:"
                    android:id="@+id/textView"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_column="1"
                    android:layout_marginLeft="40dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/user_want_dropdown"
                    android:layout_column="1"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="25dp" />
            </LinearLayout>

        </TableRow>

    </TableLayout>
</RelativeLayout>